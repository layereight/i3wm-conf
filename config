################################################################################
# SYSTEM: lock/logout/reboot/suspend/hibernate/shutdown

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (p) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id ~/bin/passwords/sync_passwords.sh && i3lock -c 000000, mode "default"
    bindsym e exec --no-startup-id ~/bin/passwords/sync_passwords.sh && i3-msg exit, mode "default"
    bindsym s exec --no-startup-id ~/bin/passwords/sync_passwords.sh && i3lock -c 000000 && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id ~/bin/passwords/sync_passwords.sh && zenity --question --text="Do you really want to hibernate?" --title="Hibernate" && i3lock -c 000000 && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id ~/bin/passwords/sync_passwords.sh && systemctl reboot, mode "default"
    bindsym p exec --no-startup-id ~/bin/passwords/sync_passwords.sh && systemctl poweroff, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+End mode "$mode_system"


